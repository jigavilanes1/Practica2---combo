@{
    ViewBag.Title = "Index";
}
<nav class="navbar navbar-expand-lg bg-secondary navbar-dark sticky-top py-lg-0 px-lg-5 wow fadeIn" data-wow-delay="0.1s">
    <a href='@Url.Content("~/Home/Index")' class="navbar-brand ms-4 ms-lg-0">
        <h1 class="mb-0 text-primary text-uppercase"><i class="fa fa-laptop me-3"></i>Cinema</h1>
    </a>
    <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
        <div class="navbar-nav ms-auto p-4 p-lg-0">
            <a href='@Url.Content("~/Home/Index")' class="nav-item nav-link active">Inicio</a>
            <a href='@Url.Content("~/Home/About")' class="nav-item nav-link">Informacion</a>
            <a href='@Url.Content("~/Home/Historial")' class="nav-item nav-link">Historial Compras</a>
            <div class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Categorias</a>
                <div class="dropdown-menu m-0">
                    <a href='@Url.Content("~/Home/Accion")' class="dropdown-item">Accion</a>
                    <a href='@Url.Content("~/Home/Terror")' class="dropdown-item">Terror</a>
                    <a href='@Url.Content("~/Home/Drama")' class="dropdown-item">Drama</a>
                    <a href='@Url.Content("~/Home/Comedia")' class="dropdown-item">Comedia</a>
                    <a href='@Url.Content("~/Home/Romance")' class="dropdown-item">Romance</a>
                </div>
            </div>
        </div>
        @Html.ActionLink("Cerrar Sesion", "Logoff", "Login", null, new { @class = "btn btn-primary rounded-0 py-2 px-lg-4 d-none d-lg-block" })
</nav>
<!-- Carousel Start -->
<div class="container-fluid p-0 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner" style="position:center;">
            <video src="~/Content/img/video.mp4" width="1500" autoplay muted loop></video>
            <div class="carousel-caption d-flex align-items-center justify-content-center text-start">
                <div class="mx-sm-5 px-5" style="max-width: 900px;">
                    <h1 class="display-2 text-white text-uppercase mb-4 animated slideInDown">PROXIMAMENTE</h1>
                    <h4 class="text-white text-uppercase mb-4 animated slideInDown"><i class="fa fa-play text-primary me-3"></i>Solo en Cines</h4>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
            <h1 class="text-uppercase">Peliculas en Cartelera</h1>
        </div>
        <div class="row g-4" id="cartelera">
        </div>
        <br>
    </div>
</div>
<!-- Team End -->
<div class="container-fluid p-0 mb-5 wow fadeIn" data-wow-delay="1s">
    <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="w-100" src="~/Content/img/car1.png" alt="Image">
            </div>
            <div class="carousel-item">
                <img class="w-100" src="~/Content/img/car2.png" alt="Image">
            </div>
            <div class="carousel-item">
                <img class="w-100" src="~/Content/img/car3.png" alt="Image">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#header-carousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<div class="container-xxl py-5">
    <div class="container">
        <img class="w-100" src="~/Content/img/ter.png" alt="Image">
    </div>
</div>
<!-- Footer Start -->
<div class="container-fluid bg-secondary text-light footer mt-5 pt-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-4 col-md-6">
                <h4 class="text-uppercase mb-4"><img src="~/Content/img/logo.png" alt="Image"></h4>
                <div class="d-flex align-items-center mb-2">
                    <div class="btn-square bg-dark flex-shrink-0 me-3">
                        <span class="fa fa-map-marker-alt text-primary"></span>
                    </div>
                    <span>Av. Simon Bolivar</span>
                </div>
                <div class="d-flex align-items-center">
                    <div class="btn-square bg-dark flex-shrink-0 me-3">
                        <span class="fa fa-envelope-open text-primary"></span>
                    </div>
                    <span>cinemex@info.com</span>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <h4 class="text-uppercase mb-4">Sobre Nosotros</h4>
                <a class="btn btn-link" href='@Url.Content("~/Home/About")'>Informacion</a>
                <a class="btn btn-link" href='@Url.Content("~/Home/Accion")'>Peliculas Accion</a>
                <a class="btn btn-link" href='@Url.Content("~/Home/Terror")'>Peliculas Terror</a>
                <a class="btn btn-link" href='@Url.Content("~/Home/Drama")'>Peliculas Drama</a>
                <a class="btn btn-link" href='@Url.Content("~/Home/Romance")'>Peliculas Romance</a>
            </div>
            <div class="col-lg-4 col-md-6">
                <h4 class="text-uppercase mb-4">Siguenos en nuestras redes</h4>
                <div class="d-flex pt-1 m-n1">
                    <a class="btn btn-lg-square btn-dark text-primary m-1" href="#"><i class="fab fa-twitter"></i></a>
                    <a class="btn btn-lg-square btn-dark text-primary m-1" href="#"><i class="fab fa-facebook-f"></i></a>
                    <a class="btn btn-lg-square btn-dark text-primary m-1" href="#"><i class="fab fa-youtube"></i></a>
                    <a class="btn btn-lg-square btn-dark text-primary m-1" href="#"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>