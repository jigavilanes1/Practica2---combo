    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
        <div class="navbar-nav ms-auto p-4 p-lg-0">
            <a href='@Url.Content("~/Home/Index")' class="nav-item nav-link active">Inicio</a>
            <a href='@Url.Content("~/Home/About")' class="nav-item nav-link">Informacion</a>
            <a href='@Url.Content("~/Home/Historial")' class="nav-item nav-link">Historial Compras</a>
            <div class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Categorias</a>
                <div class="dropdown-menu m-0">
                    <a href='@Url.Content("~/Home/Accion")' class="dropdown-item">Accion</a>
